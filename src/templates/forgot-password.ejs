</head>

<body>
  <!-- Email wrapper for full-width background -->
  <div class="email-wrapper">
    <!-- Main email container -->
    <div class="email-container">

      <!-- Header section with background image -->
      <div class="header-section">
        <div class="header-content">
          <img src="https://d2x163e8fostr4.cloudfront.net/common/ss_logo.png" 
               alt="SendScript Logo" 
               class="logo-img">
          <div class="tagline">
            Seamless Integration For<br>
            Better Healthcare Solutions
          </div>
        </div>
      </div>

      <!-- Content section -->
      <div class="content-section">
        <div class="email-title">
          Reset Your Sendscript Password
        </div>

        <div class="email-content">
          <p class="email-text">Dear Dr. <%= doctor_name %>,</p>
          <p class="email-text">We received a request to reset your Sendscript account password.</p>
          <p class="email-text">Please use the following Verification Code to proceed:</p>

          <!-- Verification code with individual digits -->
          <div class="verification-container">
            <div class="verification-code">
              <% const codeArray=otp.toString().split(''); %>
                <% codeArray.forEach(digit=> { %>
                  <div class="code-digit">
                    <%= digit %>
                  </div>
                  <% }); %>
            </div>
          </div>

          <p class="email-text">This code is valid for the next 10 minutes. If you did not request a password reset,
            please ignore this message.</p>
        </div>

        <div class="email-content regards_section">
          <p class="email-text regards_text">Regards,<br>The SendScript Team</p>
        </div>
      </div>

      <!-- Footer section -->
      <div class="footer-section">
        <p class="footer-text">116 Harley Street, London, W1G 7JL</p>
        <div class="footer-links">
          <p class="footer-text">support@sendscript.com</p>
          <p class="footer-text">+44 20 7486 1546</p>
        </div>
        <div class="footer-links">
          <p class="footer-text">Â© 2025 SendScript, Inc. All Rights Reserved.</p>
          <p class="footer-text">Privacy Policy</p>
          <p class="footer-text">Terms and Conditions</p>
        </div>
      </div>

    </div>
  </div>
</body>

</html>